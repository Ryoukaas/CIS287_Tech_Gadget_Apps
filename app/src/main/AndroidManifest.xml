<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.techgadgetapps">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TechGadgetApps"
        tools:targetApi="31">
        <activity
            android:name=".SteamDeck"
            android:label="Steam Deck"
            android:exported="false" />
        <activity
            android:name=".NintendoSwitch"
            android:label="Nintendo Switch"
            android:exported="false" />
        <activity
            android:name=".XboxSeriesX"
            android:label="Xbox Series X"
            android:exported="false" />
        <activity
            android:name=".Playstation5"
            android:label="Playstation 5"
            android:exported="false" />
        <activity
            android:name=".GamingComputer"
            android:label="Gaming Computer"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>